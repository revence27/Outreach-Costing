$general_font: "VarelaRoundRegular", "Sans serif";
$unicef_blue: #00b0f0;

body, table
{
  font-size: 15pt;
  font-family: $general_font;
}

a
{
  color: $unicef_blue;
}

#footer
{
  font-size: 50%;
  text-align: center;
  margin-top: 5em;
}

#navbar
{
  text-align: center;
  a
  {
    text-decoration: none;
  }

  .navitem
  {
    margin: 1em;
  }
}

#header
{
  font-size: 200%;
  margin-bottom: 1em;
  color: $unicef_blue;
  text-shadow: 0em 0em 0.50em $unicef_blue;

  #tagline
  {
    text-align: left;
    text-align: center;
    font-weight: bold;
    font-size: 120%;
  }

  #logoface
  {
    text-align: right;
    background: url('<%= asset_path('unicef.png') %>') no-repeat top;
  }
}
